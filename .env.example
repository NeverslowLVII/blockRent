# Configuration pour le déploiement des smart contracts
# Copiez ce fichier vers .env et remplissez les valeurs requises

# Clé privée du wallet de déploiement (sans le 0x)
PRIVATE_KEY=

# URL RPC pour le réseau
ETHEREUM_RPC_URL=
GOERLI_RPC_URL=
SEPOLIA_RPC_URL=
POLYGON_RPC_URL=
MUMBAI_RPC_URL=

# Clés API pour la vérification des contrats
ETHERSCAN_API_KEY=
POLYGONSCAN_API_KEY=

# Configuration de gas pour le déploiement
GAS_PRICE=
GAS_LIMIT=

# Smart Contract Settings
ALCHEMY_API_KEY=

# Ethereum Networks
MAINNET_RPC_URL=

# Polygon Networks
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology/

# Deployment Configuration
VERIFY_CONTRACT=true

# Frontend Settings
NEXT_PUBLIC_CHAIN_ID=80002
NEXT_PUBLIC_NETWORK_NAME="Polygon Amoy"
NEXT_PUBLIC_CONTRACT_ADDRESS=
NEXT_PUBLIC_PROVIDER_URL=https://rpc-amoy.polygon.technology/

# Test Settings
FORKING_ENABLED=false
FORK_BLOCK_NUMBER=
GAS_REPORT_ENABLED=true 